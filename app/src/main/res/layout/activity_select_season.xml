<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SelectSeason"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSpring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:background="#41B35C"
            android:fontFamily="@font/cafe24bold"
            android:text="봄"
            android:textColor="#00854B"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSummer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FEF2A0"
            android:fontFamily="@font/cafe24bold"
            android:text="여름"
            android:textColor="#F3A305"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonFall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FE9331"
            android:fontFamily="@font/cafe24bold"
            android:text="가을"
            android:textColor="#BF3F03"
            android:textSize="48sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonWinter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#90CAF0"
            android:fontFamily="@font/cafe24bold"
            android:text="겨울"
            android:textColor="#0059B8"
            android:textSize="48sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>