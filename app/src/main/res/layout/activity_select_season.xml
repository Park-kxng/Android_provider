<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SelectSeason">

    <Button
        android:id="@+id/buttonSpring"
        android:layout_width="168dp"
        android:layout_height="241dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="599dp"
        android:background="#41B35C"
        android:text="봄"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <Button
        android:id="@+id/buttonSummer"
        android:layout_width="168dp"
        android:layout_height="232dp"
        android:background="#FEF2A0"
        android:text="여름"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="219dp"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/buttonFall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FE9331"
        android:text="가을"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="398dp" />

    <Button
        android:id="@+id/buttonWinter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#90CAF0"
        android:text="겨울"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="541dp" />

</androidx.constraintlayout.widget.ConstraintLayout>